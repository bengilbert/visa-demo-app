<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Simple contact manager" %></title>
    <meta name="description" content="Rails demostration application">
    <meta name="author" content="Ben Gilbert">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body>
    <header class="navbar navbar-fixed-top">
      <nav class="navbar-inner">
        <div class="container">
          <%= render 'layouts/navigation' %>
        </div>
      </nav>
    </header>
    <div id="main" role="main">
      <div class="container">
        <div class="content">
           <div class="row">
            <div class="span12">
              <%#= render 'layouts/messages' %>
              <%= yield %>
            </div>
          </div>
          <footer class="navbar navbar-fixed-bottom">
      <nav class="navbar-inner">
        <div class="container">
          Simple Rails 3.2 demostration application.  For more information please contact <a href="mailto:ben.gilbert.london@gmail.com?Subject=Hello">
Ben Gilbert</a>

        </div>
      </nav>            
          </footer>
        </div>
      </div> <!--! end of .container -->
    </div> <!--! end of #main -->
  </body>
</html>